<!-- /templates/customers/login.liquid -->

<div class="container">

    <div class="card my-5 mx-auto" style="width: 25rem;">

        <div class="card-header">
            <h2>Login</h2>
        </div>

        <div class="card-body">
            {% form 'customer_login' %}
                {% include 'form-error', form: form %}
                <label for="customer_email">Email Address</label>
                <input type="email" name="customer[email]" class="form-control" />
                <label for="customer_password">Password</label>
                <input type="password" name="customer[password]" class="form-control" />
                <input type="submit" value="Sign In" class="btn btn-primary mt-1" />
            {% endform %}
            <a href="#recover" id="forgotPassword" class="text-center">Forgot your password?</a>
        </div>

        <div id="forgot_password_form" class="card-body forgot-password-form d-none">
            {% form 'recover_customer_password' %}
                {% include 'form-error', form: form %}
                <label for="customer_email">Email Address</label>
                <div class="input-group">
                    <input type="email" name="email" id="resetPassword" class="form-control" />
                    <div class="input-group-append">
                        <input type="submit" value="Submit" class="btn btn-secondary" />
                    </div>
                </div>
            {% endform %}
        </div>
    </div>
</div>
